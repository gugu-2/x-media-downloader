{
  "manifest_version": 3,
  "name": "X Media Downloader",
  "version": "2.0",
  "description": "Download videos, images, and GIFs from X.com (Twitter) with ease",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "*://x.com/*",
    "*://twitter.com/*",
    "*://pbs.twimg.com/*",
    "*://video.twimg.com/*",
    "*://*.twimg.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "js": ["content_script.js"],
      "css": ["extension_styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background_script.js"
  },
  "action": {
    "default_popup": "popup_html.html",
    "default_title": "X Media Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["*://x.com/*", "*://twitter.com/*"]
    }
  ]
}